Function {createMainWindow()} {open
} {
  Fl_Window {} {
    label Flink open
    xywh {466 222 539 193} type Double visible
  } {
    Fl_File_Input wSourceFolder {
      label {FLTK Root Folder}
      callback {sourceFolderChanged();}
      xywh {24 26 460 34} align 1
    }
    Fl_Button wSourceFolderSelect {
      label {@fileopen}
      callback {selectSourceFolder();}
      xywh {484 36 35 24} labelcolor 215
    }
    Fl_File_Input wProjectFolder {
      label {AndroidStudio Project Subfolder}
      callback {projectFolderChanged();} selected
      xywh {24 86 460 34} align 1
    }
    Fl_Button wProjectFolderSelect {
      label {@fileopen}
      callback {selectProjectFolder();}
      xywh {484 96 35 24} labelcolor 215
    }
    Fl_Button wDeleteProject {
      label {Delete Project}
      callback {deleteProject();}
      xywh {92 144 141 30}
    }
    Fl_Button {} {
      label {Create AndroidStudio Project}
      callback {createProject();}
      xywh {256 144 217 30}
    }
    Fl_Button {} {
      label {?}
      callback {showAboutWindow();}
      xywh {483 147 24 24} box ROUND_UP_BOX color 215 labelsize 16
    }
  }
}

